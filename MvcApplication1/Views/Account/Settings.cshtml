@using MvcApplication1.Models.UserModel
@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td style="font-size: large"><b>General Account Settings</b></td>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><b>Name</b></td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td><b>Username</b></td>
                    <td>@Model.Username</td>
                </tr>
                <tr>
                    <td><b>Email</b></td>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <td><b>Password</b></td>
                    <td><a href="~/Account/Manage">Change Password</a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

