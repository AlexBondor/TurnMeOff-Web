@model TurnMeOff.Repository.Models.LoginModel

@{
    
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- //TODO insert Log in in page title -->
@*<p class="loginTitle">TurnMeOff Project.</p>*@
<div class="row" style="top:-50px">
    <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-12 box-transparency">
        <section id="loginForm">
            @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend>
                        <br>
                        Login form
                    </legend>
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox, pull-left" })
                        <p class="pull-right">Forgot your password?</p>
                    </div>
                    <button type="submit" class="btn btn-success btn-block">Submit</button>
                </fieldset>
                <br>
                <p class="text-center">
                    @Html.ActionLink("Register", "Register") if you don't have an account.
                </p>
                <br>
            }
        </section>
    </div>
</div>

