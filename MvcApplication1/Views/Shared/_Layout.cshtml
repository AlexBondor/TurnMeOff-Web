@{
    var ControllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString().ToLower();
    var ActionName = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString().ToLower();
    <!-- Page name shown in header. Restriction for 2 words -->
    ActionName = ActionName[0].ToString().ToUpper() + ActionName.Substring(1, ActionName.Length - 1);
    ControllerName = ControllerName[0].ToString().ToUpper() + ControllerName.Substring(1, ControllerName.Length - 1);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Turn Me Off</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    @Styles.Render("~/Content/css", "~/Content/bootstrap")
</head>
<body class="background-img">
    @if ((ControllerName != "Account") || (ControllerName == "Account" && ActionName == "Edit")) //put layout on all but Account controller(but Edit action)
    {
        <!-- TOP NAVBAR -->
        <nav class="navbar-fixed-top navbar navbar-default" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/Devices/List">TurnMeOff</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse" role="navigation" style="height: 10px;">
                <ul class="hidden-lg hidden-md hidden-sm nav navbar-nav navbar-right">
                    <li><a href="~/Devices/List">My Devices</a></li>
                    <li><a href="~/Account/Edit">Edit Account</a></li>
                    <li><a href="~/Devices/Settings">Devices Settings</a></li>
                    <li><a href="~/Account/Logout"><strong>Log Out</strong></a></li>
                </ul>

                <ul class="visible-lg visible-md visible-sm nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b>@User.Identity.Name</b><b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Devices/List">My Devices</a></li>
                            <li><a href="~/Account/Edit">Edit Account</a></li>
                            <li><a href="~/Devices/Settings">Devices Settings</a></li>
                            <li class="divider"></li>
                            <li><a href="~/Account/Logout">Log Out</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <!-- end TOP navbar -->
    }


    @if ((ControllerName != "Account") || (ControllerName == "Account" && ActionName == "Edit"))
    {
        @RenderBody()
    }
    else
    {
        <div class="container">
            @RenderBody()
        </div>
    }

    @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval", "~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @section scripts {
        <script type="text/javascript">
        </script>
    }
    <footer>
    </footer>
</body>
</html>
