@{
    var ControllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString().ToLower();
    var ActionName = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString().ToLower();
    if (ActionName.ToString() == "adddevice")
    {
        ActionName = "Add Device";
    }
    else
    {
        if (ActionName.ToString() == "accountsettings")
        {
            ActionName = "Account Settings";
        }
        else
        {
            ActionName = ActionName[0].ToString().ToUpper() + ActionName.Substring(1, ActionName.Length - 1);
        }
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Turn Me Off</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    @Styles.Render("~/content/css")
</head>
<body>
    @if (ControllerName != "account") //TODO to upper!..check if current controller = Account
    {
        <nav class="navbar navbar-default" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/Customer">TurnMeOff</a>
                <a class="navbar-brand" style="color: black"><b>@ActionName</b></a>
                @*<span class="glyphicon glyphicon-search"></span>*@
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                @*<ul class="nav navbar-nav">
                    <li><a href="/customer/details">Details</a></li>
                </ul>*@

                <ul class="nav navbar-nav navbar-right">

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b>@User.Identity.Name</b><b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Customer/Dashboard">Dashboard</a></li>
                            <li><a href="~/Customer/AccountSettings">Account Settings</a></li>
                            <li class="divider"></li>
                            <li><a href="~/Account/Login">Log Out</a></li>
                        </ul>

                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <!-- end navbar -->
    }
    <div class="container">

        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @RenderSection("scripts", required: false)

    @section scripts {

    }
    <footer>
        <br>
        <br>
        <br>
    </footer>
</body>
</html>
